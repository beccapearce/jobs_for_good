<% if @jobs.any? %>
  <% @jobs.each do |job| %>
    <h3> <%= job.title %> </h3>
    <%= job.company %>
    <%= job.location %>
    <%= job.salary %>
    <%= job.description %>
    <%= link_to job.title, job_path(job) %>
    <%= link_to "Edit", edit_job_path(job) %>
    <%= link_to "Delete", job_path(job), method: :delete %>
  <% end %>
<% else %>
  No jobs yet
<% end %>

<a href='/jobs/new'>Add a job</a>
